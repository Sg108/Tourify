

<% layout('layout/boilerplate')%>
 <div id="map" style="width:100%; height:500px"></div>
    <h1>All Adventure tourist Sites</h1>
 
    <a class="btn btn-success" href="/sites/new">Add Sites</a>
   
    <%for(let s of sites) {%>
    <div class="card" mb-3>
        <div class="row">

            <div class="col-md-4">
            <% if(s.images.length===0) { %>
                <img class="img-fluid" src="https://res.cloudinary.com/djbomerqh/image/upload/v1634283780/Tourific/nzfpx6olqskxknxemqcg.jpg" alt="">
            <% }else { %>
                <img class="img-fluid" src="<%= s.images[0].url %>" alt="">
            <% } %>
              </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= s.title %> </h5>
                    <p class="card-text"><%=s.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= s.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/sites/<%=s._id%>">View <%=s.title%></a>
                </div>
            </div>
        </div>
    </div>
    <%}%>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const Sites = { features: <%- JSON.stringify(sites) %>}
    </script>
    
    <script src="/javascript/clusterMap.js"></script>